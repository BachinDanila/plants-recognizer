<resources>
    <!-- Base application theme. -->
    <style name="Default" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark1</item>
        <item name="colorAccent">@color/colorAccent1</item>

        <item name="textColor">@color/primary_dark_light</item>
        <item name="background">@color/white</item>
        <item name="textSize">25sp</item>
    </style>

    <style name="Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/Theme1_background</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textColor">@color/primary_dark_light</item>
        <item name="background">@color/Theme1_background</item>
        <item name="textSize">15sp</item>
    </style>

    <style name="Dark" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textColor">@color/primary_dark_light</item>
        <item name="background">@color/primary</item>
        <item name="textSize">15sp</item>
    </style>

    <style name="CustomAnimationButton" parent="@style/Widget.AppCompat.Button">
        <item name="colorButtonNormal">#1a237e</item>
        <item name="colorControlHighlight">#673ab7</item>
        <item name="android:stateListAnimator">@animator/send_button</item>
    </style>

</resources>
