<resources>

    <!-- Base application theme. -->
    <style name="Default" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/sky_blue</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textColor">@color/primary_dark_light</item>
        <item name="background">@color/sky_blue</item>
        <item name="textSize">15sp</item>
    </style>

    <style name="Light" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/Theme1_background</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textColor">@color/primary_dark_light</item>
        <item name="background">@color/Theme1_background</item>
        <item name="textSize">15sp</item>
    </style>

    <style name="Dark" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="textColor">@color/primary_dark_light</item>
        <item name="background">@color/primary</item>
        <item name="textSize">15sp</item>
    </style>

</resources>
